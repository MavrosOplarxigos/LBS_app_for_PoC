<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/LBS_entities_manager_IP_TV"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:text="LBS entities manager IP"
        android:textColor="#2196F3"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/LBS_entities_manager_IP_TV"
        android:id="@+id/LBS_entities_manager_IP_ET"
        android:layout_width="300dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter IP address"
        android:inputType="number|text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/Node_Name_TV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Node Name"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/LBS_entities_manager_IP_ET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="#2196F3"
        />

    <EditText
        android:id="@+id/Node_Name_ET"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Node_Name_TV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Enter your name"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        />

    <Button
        android:id="@+id/configure_button"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="15dp"
        android:text="save/update configuration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Node_Name_ET"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/Remote_Services_Online_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote server online"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/configure_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/Remote_Services_Online_STATUS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/configure_button"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@+id/Remote_Services_Online_TV"
        android:layout_marginRight="10dp"
        android:src="@drawable/empty"
        />

    <TextView
        android:id="@+id/Credentials_Loaded_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credentials Downloaded"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Remote_Services_Online_TV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/Credentials_Loaded_STATUS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/Remote_Services_Online_TV"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/Credentials_Loaded_TV"
        android:layout_marginRight="10dp"
        android:src="@drawable/empty"
        />

    <Button
        android:id="@+id/button_first"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:text="USE LBS"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />





